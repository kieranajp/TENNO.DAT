{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev:api"],
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Web",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev:web"],
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "DB Migrate",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["db:migrate"],
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "DB Seed",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["db:seed"],
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "Update snapshots",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["test:e2e:update-snapshots"],
      "cwd": "${workspaceFolder}/packages/web",
    },
  ],
  "compounds": [
    {
      "name": "Full Stack",
      "configurations": ["API", "Web"]
    }
  ]
}

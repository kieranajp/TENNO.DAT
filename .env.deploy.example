# Deployment Environment Variables
# Copy this to .env.deploy and fill in actual values
# Load before deploying: source .env.deploy && ./deploy.sh

# Required: Database Configuration
export DB_USER=warframe
export DB_PASS=your-secure-password-here
export DB_NAME=warframe

# Optional: Database (have defaults in deploy.sh)
export DB_HOST=tenno-postgresql  # Default: internal PostgreSQL service
export DB_PORT=5432               # Default: standard PostgreSQL port

# Required: API Configuration
export BASE_URL=https://ordis.kieranajp.uk       # Where the API is publicly accessible
export FRONTEND_URL=https://tenno.kieranajp.uk   # Where users are redirected after auth
export CORS_ORIGIN=https://tenno.kieranajp.uk    # Allowed CORS origin

# Optional: Steam API Key
export STEAM_API_KEY=                             # Get from https://steamcommunity.com/dev/apikey

# Required: Web Frontend Configuration
export VITE_API_URL=https://ordis.kieranajp.uk   # API URL for web frontend

# Optional: Kubernetes namespace (defaults to 'apps')
export NAMESPACE=apps

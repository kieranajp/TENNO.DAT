# Deployment Environment Variables
# Copy this to .env.deploy and fill in actual values
# Load before deploying: source .env.deploy && ./deploy.sh

# Required Database Configuration
export DB_USER=tenno
export DB_PASS=your-secure-password-here
export DB_NAME=warframe

# Optional (have defaults in deploy.sh)
export DB_HOST=tenno-postgresql
export DB_PORT=5432

# API URL for web frontend (required)
# Use the public API URL for OAuth callbacks to work
export VITE_API_URL=https://api.tenno.kieranajp.uk

# Optional Kubernetes namespace (defaults to 'apps')
export NAMESPACE=apps
